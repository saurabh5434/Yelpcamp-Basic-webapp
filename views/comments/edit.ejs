 <%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col -lg-12">
			<h1 class="title">Edit comment</h1><br>
			<div class="camp-form">
				<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
					</div>
					<div class="form-group">
						<button class="btn btn-primary btn-lg btn-block">Submit</button>
					</div>
				</form>
				<a href="/campgrounds">Back</a>
			</div>
		</div>
		
	</div>
	
</div>


