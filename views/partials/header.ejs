<!DOCYTPE html>
<html>
	<head>
		<title>YelpCamp</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
	</head>
	<body>
		<nav class="navbar navbar-expand-sm navbar-custom" >
			<div class="container">
				<div class="navbar-header">
					<a href="/" class="navbar-brand">YelpCamp</a>
				</div>
				<button class="navbar-toggler custom-toggler" data-toggle="collapse" data-target="#togglemenu">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="togglemenu">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item active">
							<a href="#" class="nav-link">Home</a>
						</li>
						<li class="nav-item">
							<a href="#" class="nav-link">About</a>
						</li>
						<li class="nav-item">
							<a href="#" class="nav-link">Contact</a>
						</li>
					</ul>
					<ul class="navbar-nav ">
						<% if(currentUser){ %>
							<li class="nav-item"><a href="#" class="nav-link">Welcome <%= currentUser.username %></a></li>
							<li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
						<% } else {  %>
							<li class="nav-item"><a href="/register" class="nav-link">Sign up</a></li>
							<li class="nav-item"><a href="/login" class="nav-link">Login</a></li>
							<% } %>
					</ul>
				</div>
			</div>
		</nav><br>
		<div class="container">
			<% if(error && error.length > 0) { %>
			<div class="alert alert-danger" role="alert"><%= error %></div>
			<% } %>
			<% if(success && success.length > 0) { %>
			<div class="alert alert-success" role="alert"><%= success %></div>
			<% } %>
		</div>
		